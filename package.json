{
	"name": "portify",
	"version": "0.0.1",
	"type": "module",
	"volta": {
		"node": "20.8.0"
	},
	"dependencies": {
		"@libsql/client": "^0.3.6",
		"@lucia-auth/adapter-sqlite": "^2.0.1",
		"@lucia-auth/oauth": "^3.5.0",
		"drizzle-orm": "^0.29.1",
		"lucia": "^2.7.4",
		"open-props": "1.6.13",
		"pretty-ms": "^8.0.0"
	},
	"devDependencies": {
		"@melt-ui/pp": "0.1.4",
		"@melt-ui/svelte": "0.63.1",
		"@playwright/test": "^1.40.1",
		"@sveltejs/adapter-auto": "^2.1.1",
		"@sveltejs/adapter-netlify": "2.0.8",
		"@sveltejs/enhanced-img": "0.1.5",
		"@sveltejs/kit": "^1.27.6",
		"@types/node": "20.10.1",
		"@typescript-eslint/eslint-plugin": "^6.13.1",
		"@typescript-eslint/parser": "^6.13.1",
		"autoprefixer": "10.4.16",
		"dotenv": "^16.3.1",
		"drizzle-kit": "^0.20.6",
		"eslint": "^8.54.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.35.1",
		"npm-run-all": "4.1.5",
		"postcss": "8.4.31",
		"postcss-jit-props": "1.0.14",
		"prettier": "^3.1.0",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.8",
		"svelte-check": "^3.6.2",
		"svelte-sequential-preprocessor": "2.0.1",
		"tslib": "^2.6.2",
		"tsx": "^4.6.1",
		"typescript": "^5.3.2",
		"vite": "^4.5.0",
		"vitest": "^0.34.6"
	},
	"private": true,
	"scripts": {
		"drizzle:generate": "drizzle-kit generate:sqlite --out ./drizzle/migrations --breakpoints --schema=./src/lib/db/schema.ts",
		"drizzle:migrate": "tsx ./src/lib/db/migrate.ts",
		"drizzle:push": "drizzle-kit push:sqlite",
		"drizzle:studio": "drizzle-kit studio --port 3333",
		"turso:dev": "turso dev",
		"svelte:sync": "svelte-kit sync",
		"svelte:check": "svelte-check --tsconfig ./tsconfig.json",
		"check:sync": "npm run svelte:sync",
		"check:svelte": "npm run svelte:check",
		"check": "run-s check:*",
		"format": "prettier --plugin-search-dir . --write .",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"tests:check": "npm run check",
		"tests:unit": "vitest --run",
		"tests:integration": "playwright test",
		"tests": "run-s tests:*",
		"test": "vitest",
		"dev:check": "run-s svelte:sync svelte:check -- --watch",
		"dev": "vite dev --host",
		"preview": "vite preview",
		"build:check": "npm run check",
		"build:vite": "vite build",
		"build": "run-s build:*"
	}
}
