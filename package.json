{
	"name": "portify",
	"version": "0.0.1",
	"type": "module",
	"volta": {
		"node": "20.8.0"
	},
	"dependencies": {
		"@libsql/client": "^0.3.6",
		"@lucia-auth/adapter-sqlite": "^2.0.1",
		"@lucia-auth/oauth": "^3.3.1",
		"drizzle-orm": "^0.28.6",
		"lucia": "^2.7.1",
		"open-props": "1.6.8",
		"pretty-ms": "^8.0.0"
	},
	"devDependencies": {
		"@playwright/test": "^1.39.0",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/adapter-netlify": "2.0.8",
		"@sveltejs/kit": "^1.26.0",
		"@types/node": "20.8.7",
		"@typescript-eslint/eslint-plugin": "^6.8.0",
		"@typescript-eslint/parser": "^6.8.0",
		"autoprefixer": "10.4.16",
		"dotenv": "^16.3.1",
		"drizzle-kit": "^0.19.13",
		"eslint": "^8.51.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.34.0",
		"postcss": "8.4.31",
		"prettier": "^3.0.3",
		"prettier-plugin-svelte": "^3.0.3",
		"svelte": "^4.2.2",
		"svelte-check": "^3.5.2",
		"tslib": "^2.6.2",
		"tsx": "^3.14.0",
		"typescript": "^5.2.2",
		"vite": "^4.5.0",
		"vitest": "^0.34.6"
	},
	"private": true,
	"scripts": {
		"build": "vite build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"dev": "vite dev",
		"format": "prettier --plugin-search-dir . --write .",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"drizzle:generate": "drizzle-kit generate:sqlite --out ./drizzle/migrations --breakpoints --schema=./drizzle/schema.ts",
		"drizzle:migrate": "tsx ./drizzle/migrate.ts",
		"drizzle:studio": "drizzle-kit studio --port 3333",
		"turso:local": "turso dev --db-file portify.db --port 5555"
	}
}
