{
	"name": "portify",
	"version": "0.0.1",
	"type": "module",
	"volta": {
		"node": "20.8.0"
	},
	"dependencies": {
		"@libsql/client": "^0.3.6",
		"@lucia-auth/adapter-sqlite": "^2.0.1",
		"@lucia-auth/oauth": "^3.3.1",
		"drizzle-orm": "^0.28.6",
		"lucia": "^2.7.2",
		"open-props": "1.6.10",
		"pretty-ms": "^8.0.0"
	},
	"devDependencies": {
		"@melt-ui/pp": "0.1.2",
		"@melt-ui/svelte": "0.57.3",
		"@playwright/test": "^1.39.0",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/adapter-netlify": "2.0.8",
		"@sveltejs/kit": "^1.27.2",
		"@types/node": "20.8.10",
		"@typescript-eslint/eslint-plugin": "^6.9.1",
		"@typescript-eslint/parser": "^6.9.1",
		"autoprefixer": "10.4.16",
		"dotenv": "^16.3.1",
		"drizzle-kit": "^0.19.13",
		"eslint": "^8.52.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.34.0",
		"npm-run-all": "4.1.5",
		"postcss": "8.4.31",
		"postcss-jit-props": "1.0.14",
		"prettier": "^3.0.3",
		"prettier-plugin-svelte": "^3.0.3",
		"svelte": "^4.2.2",
		"svelte-check": "^3.5.2",
		"svelte-sequential-preprocessor": "2.0.1",
		"tslib": "^2.6.2",
		"tsx": "^3.14.0",
		"typescript": "^5.2.2",
		"vite": "^4.5.0",
		"vitest": "^0.34.6"
	},
	"private": true,
	"scripts": {
		"drizzle:generate": "drizzle-kit generate:sqlite --out ./drizzle/migrations --breakpoints --schema=./src/lib/db/schema.ts",
		"drizzle:migrate": "tsx ./src/lib/db/migrate.ts",
		"drizzle:push": "drizzle-kit push:sqlite",
		"drizzle:studio": "drizzle-kit studio --port 3333",
		"turso:local": "turso dev --db-file portify.db --port 5555",
		"svelte:sync": "svelte-kit sync",
		"svelte:check": "svelte-check --tsconfig ./tsconfig.json",
		"check:sync": "npm run svelte:sync",
		"check:svelte": "npm run svelte:check",
		"check": "run-s check:*",
		"format": "prettier --plugin-search-dir . --write .",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"test:check": "npm run check",
		"test:unit": "vitest",
		"test:integration": "playwright test",
		"test": "run-s test:*",
		"dev:check": "run-s svelte:sync svelte:check -- --watch",
		"dev": "vite dev --host",
		"preview": "vite preview",
		"build:check": "npm run check",
		"build:vite": "vite build",
		"build": "run-s build:*"
	}
}
