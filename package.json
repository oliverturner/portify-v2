{
	"name": "portify",
	"version": "0.0.1",
	"type": "module",
	"volta": {
		"node": "20.8.0"
	},
	"dependencies": {
		"@libsql/client": "^0.3.6",
		"@lucia-auth/adapter-sqlite": "^2.0.1",
		"@lucia-auth/oauth": "^3.5.3",
		"drizzle-orm": "^0.29.1",
		"lucia": "^2.7.4",
		"open-props": "1.6.18",
		"pretty-ms": "^8.0.0"
	},
	"devDependencies": {
		"@melt-ui/pp": "0.1.4",
		"@melt-ui/svelte": "0.65.0",
		"@playwright/test": "^1.41.2",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-netlify": "^3.0.0",
		"@sveltejs/enhanced-img": "0.1.5",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/node": "20.11.17",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"autoprefixer": "10.4.17",
		"dotenv": "^16.4.2",
		"drizzle-kit": "^0.20.6",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"lefthook": "1.6.1",
		"npm-run-all": "4.1.5",
		"postcss": "8.4.35",
		"postcss-jit-props": "1.0.14",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.10",
		"svelte-check": "^3.6.4",
		"svelte-sequential-preprocessor": "2.0.1",
		"tslib": "^2.6.2",
		"tsx": "^4.7.1",
		"typescript": "^5.3.3",
		"vite": "^5.0.0",
		"vitest": "^1.2.2"
	},
	"private": true,
	"scripts": {
		"drizzle:generate": "drizzle-kit generate:sqlite --out ./drizzle/migrations --breakpoints --schema=./src/lib/db/schema.ts",
		"drizzle:migrate": "tsx ./src/lib/db/migrate.ts",
		"drizzle:push": "drizzle-kit push:sqlite",
		"drizzle:studio": "drizzle-kit studio --port 3333",
		"turso:dev": "turso dev",
		"svelte:sync": "svelte-kit sync",
		"svelte:check": "svelte-check --tsconfig ./tsconfig.json",
		"check:sync": "npm run svelte:sync",
		"check:svelte": "npm run svelte:check",
		"check": "run-s check:*",
		"format": "prettier --write .",
		"lint": "eslint .",
		"tests:check": "npm run check",
		"tests:unit": "vitest --run",
		"tests:integration": "playwright test",
		"tests": "run-s tests:*",
		"test": "vitest",
		"dev:check": "run-s svelte:sync svelte:check -- --watch",
		"dev": "vite dev --host",
		"preview": "vite preview",
		"build:check": "npm run check",
		"build:vite": "vite build",
		"build": "run-s build:*"
	}
}
