/* See https://github.com/argyleink/open-props/tree/main/src for details */
@import "open-props/buttons" layer(vendor);

:root {
	--app-header-h: 50px;
	--rail-mobile-h: 72px;

	/* Attribute on :root element */
	&[color-scheme="dark"] {
		--brand-hsl: var(--blue-8-hsl);
		--brand: hsla(var(--brand-hsl) / 1);
		--brand-1: hsla(var(--brand-hsl) / 0.8);
		--brand-2: hsla(var(--brand-hsl) / 0.6);
		--brand-3: hsla(var(--brand-hsl) / 0.4);
		--brand-4: hsla(var(--brand-hsl) / 0.2);

		--surface-0: #000e;
		--surface-1: #000c;
		--surface-2: #000a;
		--surface-3: #0008;
		--surface-4: #0006;
		--surface-5: #0005;
		--surface-6: #0003;

		--text-1: #fffc;
		--text-2: hsl(var(--blue-3-hsl));

		--border-7: #fffe;
		--border-6: #fffb;
		--border-5: #fffa;
		--border-4: #fff8;
		--border-3: #fff6;
		--border-2: #fff5;
		--border-1: #fff3;
		--border-0: #fff2;

		--surface-shadow: var(--gray-12-hsl);
		--shadow-strength: 80%;

		--bg-grad-inner: rgba(14 165 233 / 0.18);
		--bg-grad-outer: rgba(99 102 241 / 0.18);
	}

	&[color-scheme="indigo"] {
	}
}

::view-transition-old(root),
::view-transition-new(root) {
	animation-duration: 0.75s;
}

* {
	box-sizing: border-box;
}

html,
body {
	min-height: 100dvh;
	margin: 0;
	font-family: var(--font-sans);
}

body {
	--_img1: radial-gradient(at 50% 0%, var(--bg-grad-inner) 0px, transparent 75%);
	--_img2: radial-gradient(at 50% 100%, var(--bg-grad-outer) 0px, transparent 75%);

	line-height: 1.4rem;

	background-color: rgb(17, 24, 39);
	background-image: var(--_img1), var(--_img2);
	background-position: center;
	background-repeat: no-repeat;
	background-size: cover;
	color: var(--text-1);
}

:where(h1, h2, h3, h4, h5, h6) {
	margin: 0;
}

h2 {
	font-size: 1.2rem;
}

h3 {
	font-size: 1.1rem;
}

:where(h1, h2, h3, .title) {
	--font-weight: 200;

	text-transform: uppercase;
	text-wrap: balance;
	letter-spacing: 0.125em;
	font-weight: var(--font-weight);

	& .sub {
		text-transform: lowercase;
		font-style: italic;
		font-size: 0.9em;
		letter-spacing: initial;
	}
}

:where(p) {
	margin: 0;
	line-height: 1.6rem;

	& + p {
		margin-top: 0.5rem;
	}
}

:where(ul, ol) {
	list-style: none;
	padding: 0;
	margin: 0;
}

:where(a) {
	text-decoration: none;
	color: inherit;
}

:where(img) {
	opacity: 0;
	transition: opacity 1s;

	&.loaded {
		opacity: 1;
	}

	&.square {
		width: 100%;
		height: 100%;
		overflow: hidden;
		object-fit: cover;
	}
}

:where(fieldset) {
	border: none;
	margin: 0;
	padding: 1rem 0;
}

:where(label) {
	cursor: pointer;
}

:where(button) {
	font-family: inherit;
	font-weight: inherit;
	cursor: pointer;
}

/* @link https://moderncss.dev/pure-css-custom-styled-radio-buttons/ */
:where(input[type="radio"]) {
	--_stroke: var(--brand);
	--_wh: 1.15em;

	display: grid;
	place-content: center;

	appearance: none;
	margin: 0;

	width: var(--_wh);
	height: var(--_wh);
	border: 0.15em solid var(--_stroke);
	border-radius: 50%;
	color: currentColor;

	&::before {
		content: "";
		width: 0.65em;
		height: 0.65em;
		border-radius: 50%;

		transform: scale(0);
		transition: 120ms transform ease-in-out;
		box-shadow: inset 1em 1em var(--_stroke);

		/* Windows High Contrast Mode */
		background-color: CanvasText;
	}

	&:focus {
		outline: max(2px, 0.15em) solid currentColor;
		outline-offset: max(2px, 0.15em);
	}

	&:checked::before {
		transform: scale(1);
	}
}

:where(figure) {
	margin: 0;
}

:where(dt, dd) {
	margin: 0;
}

.square {
	aspect-ratio: 1;
	overflow: hidden;
}

.grid {
	display: grid;
	grid-gap: 1rem;
}

.uppercase {
	text-transform: uppercase;
}

.label,
.pill,
.btn {
	border: 1px solid var(--brand);
	border-radius: var(--border-radius);
	font-weight: var(--font-weight-0);
	line-height: 1;
}

.label {
	--border-radius: 0.25rem;
	padding: var(--size-2);
}

.pill,
.btn {
	--border-radius: 1rem;
	padding: var(--size-2) var(--size-3);
}

.datatable {
	display: grid;
	grid-template-columns: auto 1fr;
	align-items: center;
	gap: 0.35rem 0.5rem;

	margin: 0;

	& > * {
		margin: 0;
	}

	& a:hover {
		text-decoration: underline;
	}
}

.radioitems {
	display: grid;
	gap: 0.5rem;

	& li {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}
}

.list--inline {
	& > li {
		display: inline;

		&:not(:last-child)::after {
			content: ", ";
		}
	}
}

.sr-only:not(:focus):not(:active) {
	clip: rect(0 0 0 0);
	clip-path: inset(50%);
	height: 1px;
	overflow: hidden;
	position: absolute;
	white-space: nowrap;
	width: 1px;
}

.spritesheet {
	display: none;
}

.app {
	display: grid;
	grid-template-rows: var(--app-header-h) 1fr;
	grid-template-areas:
		"header"
		"content";

	position: relative;
	height: 100dvh;
	overflow: hidden;
	/*
	z-index: 3;
	*/
}

.app__header {
	grid-area: header;

	display: flex;
	align-items: center;
	justify-content: space-between;
	gap: 1rem;

	padding: 0.5rem;
	background: var(--surface-2);
	color: var(--text-1);

	view-transition-name: app__header;

	@media (min-width: 1024px) {
		padding-inline-start: 1rem;
	}
}

.app__header__title {
	font-size: var(--font-size-fluid-0);
	font-weight: 600;
	letter-spacing: var(--font-letterspacing-4);
	text-decoration: none;
}

.app__content {
	grid-area: content;

	display: grid;
	/* contain: paint; */
}

.content {
	display: grid;

	padding: 1rem;
}

.content__title {
	line-height: 2;
}

.content__items {
	--min-col-width: 18rem;

	display: grid;
	grid-template-columns: repeat(auto-fill, minmax(var(--min-col-width), 1fr));
	grid-gap: 1rem;

	font-size: 0.9rem;

	@media (min-width: 768px) {
		--min-col-width: 24rem;
	}

	&.content__items--grouped {
		--min-col-width: 20rem;
	}

	&.content__items--tiled {
		--min-col-width: 20rem;
	}
}

.item__artists {
	display: block;
	font-size: 0.95em;
	color: var(--text-2);
}

.muted {
	color: var(--text-2);
	font-size: 0.95em;
}

.stack {
	display: grid;
	gap: var(--gap, 0.5rem);
}

.playbtn {
	--_highlight-dark: #fff4;

	grid-area: 1 / 1 / -1 / -1;
	place-self: end;

	margin: 0.5rem;
	padding: 0.25rem;
	border-radius: 50%;

	&:hover {
		& svg {
			fill: #fff;
		}
	}
}
